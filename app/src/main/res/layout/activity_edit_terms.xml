<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.drathier.tagbox.EditTermsActivity"
    android:background="#ddd">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list"
        android:background="@color/tag_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:listitem="@layout/list_search"
        android:divider="@color/tag_background"
        android:dividerHeight="4dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_marginBottom="1dp"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout2"
        android:background="@color/tag_background"
        android:id="@+id/empty">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_action_search_big"
            android:tint="#ddd" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:id="@+id/linearLayout2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_query"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:hint="Search.." />

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/button_search"
            android:src="@drawable/ic_action_action_search"
            android:padding="8dp" />
    </LinearLayout>


</RelativeLayout>
